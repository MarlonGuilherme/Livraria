<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <ul>
        <% user.errors.each do |error| %>
          <li><%= t('errors.format.short', attribute: t("activerecord.attributes.user.#{error.attribute}"), message: error.message) %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.submit t('helpers.submit.create', model: t('activerecord.models.user.one')) if user.new_record? %>
    <%= form.submit t('helpers.submit.update', model: t('activerecord.models.user.one')) if user.persisted? %>
  </div>
<% end %>